<Application x:Class="Final_project.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Final_project"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            
            <Color x:Key="White">#FFFFFFFF</Color>
            <Color x:Key="OffWhite">#FFF8F9FA</Color>
            <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
            <SolidColorBrush x:Key="OffWhiteBrush" Color="{StaticResource OffWhite}"/>


            <Color x:Key="LightBlue">#FFADD8E6</Color>
            <Color x:Key="SkyBlue">#FF87CEEB</Color>
            <Color x:Key="BlueAccent">#FF4FC3F7</Color>
            <SolidColorBrush x:Key="LightBlueBrush" Color="{StaticResource LightBlue}"/>
            <SolidColorBrush x:Key="SkyBlueBrush" Color="{StaticResource SkyBlue}"/>
            <SolidColorBrush x:Key="BlueAccentBrush" Color="{StaticResource BlueAccent}"/>

            
            <Color x:Key="Gray">#FFB0B0B0</Color>
            <Color x:Key="DarkGray">#FF808080</Color>
            <Color x:Key="LightGray">#FFD3D3D3</Color>
            <SolidColorBrush x:Key="GrayBrush" Color="{StaticResource Gray}"/>
            <SolidColorBrush x:Key="DarkGrayBrush" Color="{StaticResource DarkGray}"/>
            <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>

            
            <Color x:Key="BorderGray">#FFE0E0E0</Color>
            <SolidColorBrush x:Key="BorderGrayBrush" Color="{StaticResource BorderGray}"/>
            <Color x:Key="HighlightBlue">#FF2196F3</Color>
            <SolidColorBrush x:Key="HighlightBlueBrush" Color="{StaticResource HighlightBlue}"/>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Theme/MenuButtonsTheme.xaml"/>
                <ResourceDictionary Source="/Theme/TextBoxTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>