<Window x:Class="Final_project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_project"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="920"
        WindowStyle = "None"
        ResizeMode = "NoResize"
        Background = "Transparent"
        AllowsTransparency = "True">
    
    <Border Background="{StaticResource OffWhiteBrush}"
            BorderBrush="{StaticResource BorderGrayBrush}"
            BorderThickness="1"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Elysium"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Foreground="{StaticResource HighlightBlueBrush}"
                   FontSize="22"
                   Margin="20,0,0,0"/>
            <StackPanel Grid.Row="1">
                <RadioButton Content="Home"
                             Height="50"
                             Foreground="{StaticResource DarkGrayBrush}"
                             FontSize="14"
                             Style="{StaticResource MenuButtonsTheme}"/>
                <RadioButton Content="Discovery"
                             Height="50"
                             Foreground="{StaticResource DarkGrayBrush}"
                             FontSize="14"
                             Style="{StaticResource MenuButtonsTheme}"/>

                <RadioButton Content="Featured"
                             Height="50"
                             Foreground="{StaticResource DarkGrayBrush}"
                             FontSize="14"
                             Style="{StaticResource MenuButtonsTheme}"/>

            </StackPanel>

            <TextBox Width="250"
                     Height="40"
                     VerticalContentAlignment="Center"
                     HorizontalAlignment="Left"
                     Margin="5"
                     Grid.Column="1"
                     Style="{StaticResource ModernTextBox}"/>

            <ContentControl Grid.Row="1"
                            Grid.Column="1"
                            Margin="10"/>
        </Grid>


    </Border>
</Window>
