<Window x:Class="Final_project.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Height="500" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    
    <Border CornerRadius="15" Margin="10">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.0"/>
                <GradientStop Color="#2575fc" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
  
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                
                <TextBlock Text="TranslAItor" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,30"/>

                
                <Border CornerRadius="10" Background="#22000000" Padding="20">
                    <StackPanel>
                        
                        <TextBlock Text="Email" Foreground="White" Margin="0,0,0,5"/>
                        <TextBox x:Name="EmailTextBox" 
                                 Background="#33000000" 
                                 Foreground="White" 
                                 BorderBrush="#55FFFFFF" 
                                 BorderThickness="1" 
                                 Padding="10,8" 
                                 Margin="0,0,0,15"/>

                        
                        <TextBlock Text="Password" Foreground="White" Margin="0,0,0,5"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Background="#33000000" 
                                     Foreground="White" 
                                     BorderBrush="#55FFFFFF" 
                                     BorderThickness="1" 
                                     Padding="10,8" 
                                     Margin="0,0,0,20"/>

                        
                        <Button Content="Login" 
                                Background="#44000000" 
                                Foreground="White" 
                                BorderBrush="#55FFFFFF" 
                                BorderThickness="1" 
                                Padding="15,8" 
                                FontWeight="SemiBold"
                                Click="LoginButton_Click"/>


                        <TextBlock Text="Don't have an account? Register" 
                                   Foreground="#AAFFFFFF" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,15,0,0"
                                   Cursor="Hand"
                                   MouseDown="StartRegisterCommand">
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>


            <Button Content="✕" 
                    Width="30" 
                    Height="30" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Top" 
                    Margin="0,10,10,0" 
                    Background="Transparent" 
                    BorderThickness="0" 
                    Foreground="White"
                    FontWeight="Bold"
                    Click="CloseButton_Click"/>
        </Grid>
    </Border>
</Window>